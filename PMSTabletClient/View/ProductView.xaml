<UserControl x:Class="PMSTabletClient.View.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMSTabletClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Orange">
            <Button Content="Add" Style="{StaticResource  btnSmallSquare}"/>
            <TextBlock Text="Product ID" Style="{StaticResource tbSquare}"/>
            <TextBox Text="" Style="{StaticResource txtsquare }"/>
            <TextBlock Text="Customer" Style="{StaticResource tbSquare}"/>
            <TextBox Text="" Style="{StaticResource txtsquare }"/>
            <Button Content="Search" Style="{StaticResource  btnSmallSquare}"/>
            <Button Content="Get All" Style="{StaticResource  btnSmallSquare}"/>
        </StackPanel>
    </Grid>
</UserControl>
