<Window x:Class="PMSTabletClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSTabletClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowState="Maximized">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="Wheat">
            <Button Content="订单" Style="{StaticResource btnSquare}"/>
            <Button Content="计划" Style="{StaticResource btnSquare}"/>
            <Button Content="产品" Style="{StaticResource btnSquare}"/>
            <Button Content="库存" Style="{StaticResource btnSquare}"/>
            <Button Content="绑定" Style="{StaticResource btnSquare}"/>
            <Button Content="发货" Style="{StaticResource btnSquare}"/>
            <Button Content="记录" Style="{StaticResource btnSquare}"/>
        </StackPanel>
        <ContentControl x:Name="contentPart" Grid.Column="1"/>
    </Grid>
</Window>
