<Window x:Class="PMSShipment.ToolDialog.ExpressTrack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSShipment.ToolDialog"
        mc:Ignorable="d"
        Title="Express Tracking" 
        Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Promt" Name="TxtTip" Style="{StaticResource StyleDGTextBlockCommon}"
                   Background="Orange" Foreground="White"/>
        <TextBox Grid.Row="1" Margin="5" VerticalScrollBarVisibility="Visible"
                 TextWrapping="Wrap" AcceptsReturn="True" Name="TxtTrackInfo"
                 IsReadOnly="True"/>
    </Grid>
</Window>
