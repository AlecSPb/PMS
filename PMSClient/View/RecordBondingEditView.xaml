                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PlatePerson}" Style="{StaticResource StyleTextBoxReadOnly}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource StyleTextBlockTip}" Text=""/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{StaticResource BDPlateCheckTime}" Style="{StaticResource StyleTextBlockCommon}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PlateCheckTime}" Style="{StaticResource StyleTextBoxReadOnly}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource StyleTextBlockTip}" Text=""/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{StaticResource BDPlateLot}" Style="{StaticResource StyleTextBlockCommon}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PlateLot}" Style="{StaticResource StyleTextBoxBig}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource StyleTextBlockTip}" Text=""/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="{StaticResource BDPlateMaterial}" Style="{StaticResource StyleTextBlockCommon}"/>
