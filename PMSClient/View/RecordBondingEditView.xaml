                                <TextBlock Grid.Row="9" Grid.Column="2" Style="{StaticResource StyleTextBlockTip}" Text=""/>

                            </Grid>
                        </Grid>
                    </uc:BondingEditItem.LeftArea>
                    <uc:BondingEditItem.RightArea>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"  Text="外观检查示意:确定外观完整，无伤痕和凹陷" Style="{StaticResource StyleTextBlockMultiline}"/>
                            <Image Grid.Row="1" Source="../Resource/Bondings/20.png" Stretch="Uniform" Height="200"
                                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        </Grid>
                    </uc:BondingEditItem.RightArea>
                </uc:BondingEditItem>
                <uc:BondingEditItem Title="3.0靶材预处理">
                    <uc:BondingEditItem.LeftArea>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
