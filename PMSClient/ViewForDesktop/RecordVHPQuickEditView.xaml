<UserControl x:Class="PMSClient.ViewForDesktop.RecordVHPQuickEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:PMSClient.ViewForDesktop"
            xmlns:control="clr-namespace:WPFControls;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1300"
             DataContext="{Binding Source={StaticResource Locator},Path=RecordVHPQuickEdit}" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resource/Styles/Desktop.xaml"/>
    </UserControl.Resources>
    <Grid Background="{StaticResource BGBrushWindow}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{StaticResource PageRecordVHPQuickEditPage}" Style="{StaticResource StyleTextBlockPageTitle}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="{StaticResource BGBrushNavigateBar}">
                <Button Content="{StaticResource ButtonGiveUp}" Style="{StaticResource StyleButtonCommon}" Command="{Binding GiveUp}"/>
                <Button Content="{StaticResource ButtonRefresh}" Style="{StaticResource StyleButtonCommon}" Command="{Binding Refresh}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{StaticResource IndicatorColorMeaning}" Style="{StaticResource StyleTextBlockCommon}"/>
                    <TextBlock Text="{StaticResource IndicatorYesterday}" Background="{StaticResource YesterdayBrush}" Style="{StaticResource StyleTextBlockCommon}"/>
                    <TextBlock Text="{StaticResource IndicatorToday}" Background="{StaticResource TodayBrush}" Style="{StaticResource StyleTextBlockCommon}"/>
                    <TextBlock Text="{StaticResource IndicatorTomorrow}" Background="{StaticResource TomorrowBrush}" Style="{StaticResource StyleTextBlockCommon}"/>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dg" Grid.Row="0" FrozenColumnCount="3"
                LoadingRow="DataGrid_LoadingRow"
                Style="{StaticResource StyleDataGridCommon}" ItemsSource="{Binding PlanWithMissons}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding DataContext.SelectionChanged,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" CommandParameter="{Binding ElementName=dg,Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{StaticResource PlanPlanDate}" Binding="{Binding  Plan.PlanDate,StringFormat={}{0:yyMMdd}}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanPlanLot}" Binding="{Binding Plan.PlanLot}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigCenter}"/>
                        <DataGridTextColumn Header="{StaticResource PlanVHPDeviceCode}" Binding="{Binding Plan.VHPDeviceCode}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigCenter}"/>
                        <DataGridTextColumn Header="{StaticResource OrderStandardComposition}" Binding="{Binding Misson.CompositionStandard}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanMoldType}" Binding="{Binding Plan.MoldType}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanMoldDiameter}" Binding="{Binding Plan.MoldDiameter}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanQuantity}" Binding="{Binding Plan.Quantity}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanCalculationDensity}" Binding="{Binding Plan.CalculationDensity,StringFormat={}{0:N2}}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanGrainSize}" Binding="{Binding Plan.GrainSize}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanPreTemperature}" Binding="{Binding Plan.PreTemperature}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanPrePressure}" Binding="{Binding Plan.PrePressure}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanTemperature}" Binding="{Binding Plan.Temperature}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanPressure}" Binding="{Binding Plan.Pressure}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanVaccum}" Binding="{Binding Plan.Vaccum}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanKeepTempTime}" Binding="{Binding Plan.KeepTempTime}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigRight}"/>
                        <DataGridTextColumn Header="{StaticResource PlanProcessCode}" Binding="{Binding Plan.ProcessCode}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanCreateTime}" Binding="{Binding Plan.CreateTime,StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                        <DataGridTextColumn Header="{StaticResource PlanCreator}" Binding="{Binding Plan.Creator}"
                                    ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <control:SimplePager Grid.Row="1" Command="{Binding PageChanged}" PageIndex="{Binding PageIndex,Mode=TwoWay}" PageSize="{Binding PageSize}"  RecordCount="{Binding RecordCount}" LabelPageIndex="{StaticResource PagingCurrentPageIndex}" LabelPageCount="{StaticResource PagingPageCount}"
                             LabelPageSize="{StaticResource PagingPageSize}" LabelRecordCount="{StaticResource PagingRecordCount}"/>
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource StyleBorderCommon}">
                        <Grid DataContext="{Binding DataContext.CurrentPlanWithMisson,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanPlanDate}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.PlanDate,StringFormat={}{0:yyMMdd}}"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanVHPDeviceCode}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.VHPDeviceCode}"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanPlanLot}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.PlanLot}"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanMoldType}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.MoldType}"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanMoldDiameter}"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.MoldDiameter}"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanPreTemperature}"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.PreTemperature}"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanPrePressure}"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.PrePressure}"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanTemperature}"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.Temperature}"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanPressure}"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.Pressure}"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanProcessCode}"/>
                            <TextBox Grid.Row="9" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.ProcessCode}"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Style="{StaticResource StyleTextBlockBig}"
                                   Text="{StaticResource PlanKeepTempTime}"/>
                            <TextBox Grid.Row="10" Grid.Column="1" Style="{StaticResource StyleTextBoxReadOnlyBig}"
                            Text="{Binding Plan.KeepTempTime}"/>

                        </Grid>
                    </Border>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Name="txtCurrentTime" Grid.Row="0" Text="当前时间: 21:24:33" Style="{StaticResource StyleTextBlockCommon}"
                       FontWeight="Bold"  Foreground="Blue" FontSize="20"/>
                <Border Grid.Row="1" Style="{StaticResource StyleBorderCommon}">
                    <Grid  DataContext="{Binding CurrentRecordVHP}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition  Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition  Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition  Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition  Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition   Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="12" Margin="5" Content="{StaticResource ButtonNewMode}" 
                   Command="{Binding DataContext.New,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"/>
                        <Button Content="{StaticResource ButtonSave}" Grid.Row="1" Grid.Column="12" Grid.RowSpan="3" Margin="5"
                    FontSize="20"
                    Command="{Binding DataContext.Save,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"/>
                        <TextBlock Text="{StaticResource RVHPPV1}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Text="{Binding PV1}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="1" />
                        <TextBlock Text="{StaticResource RVHPPV2}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="2"/>
                        <TextBox Text="{Binding PV2}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="3"/>
                        <TextBlock Text="{StaticResource RVHPPV3}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="4"/>
                        <TextBox Text="{Binding PV3}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="5"/>
                        <TextBlock Text="{StaticResource RVHPSV}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="6"/>
                        <TextBox Text="{Binding SV}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="7"/>
                        <TextBlock Text="{StaticResource RVHPTon}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="8"/>
                        <TextBox Text="{Binding Ton}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="9"/>
                        <TextBlock Text="{StaticResource RVHPVaccum}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="0" Grid.Column="10"/>
                        <TextBox Text="{Binding Vaccum}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="0" Grid.Column="11"/>

                        <TextBlock Text="{StaticResource RVHPShift1}" Style="{StaticResource StyleTextBlockBig}"  Grid.Row="1" Grid.Column="0"/>
                        <TextBox Text="{Binding Shift1}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="1" Grid.Column="1"/>
                        <TextBlock Text="{StaticResource RVHPShift2}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="1" Grid.Column="2"/>
                        <TextBox Text="{Binding Shift2}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="1" Grid.Column="3"/>
                        <TextBlock Text="{StaticResource RVHPOmega}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="1" Grid.Column="4"/>
                        <TextBox Text="{Binding Omega}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="1" Grid.Column="5"/>
                        <TextBlock Text="{StaticResource RVHPWaterTemperatureIn}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="1" Grid.Column="6"/>
                        <TextBox Text="{Binding WaterTemperatureIn}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="1" Grid.Column="7"/>
                        <TextBlock Text="{StaticResource RVHPWaterTemperatureOut}" Style="{StaticResource StyleTextBlockBig}" Grid.Row="1" Grid.Column="8"/>
                        <TextBox Text="{Binding WaterTemperatureOut}" Style="{StaticResource StyleTextBoxBig}" Grid.Row="1" Grid.Column="9"/>

                        <TextBlock Text="{StaticResource RVHPExtraInformation}" Style="{StaticResource StyleTextBlockBig}"  Grid.Row="2" Grid.Column="0"/>
                        <TextBox Name="txtExtraInformation" Text="{Binding ExtraInformation}" Style="{StaticResource StyleTextBoxBig}"
                                 HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6"/>
                        <ComboBox 
                            Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="4" Name="cboQuickMessages" Style="{StaticResource StyleComboBoxCommon}" 
                            SelectionChanged="cboQuickMessages_SelectionChanged" HorizontalAlignment="Stretch"
                            ItemsSource="{Binding DataContext.QuickMessages,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"/>

                    </Grid>

                </Border>
                <DataGrid Name="dgitem" Grid.Row="2" Style="{StaticResource StyleDataGridCommon}"
                  ItemsSource="{Binding RecordVHPs}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="{StaticResource DGOperate}" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{StaticResource ButtonEdit}" Style="{StaticResource StyleDGButton}" Command="{Binding DataContext.EditItem,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                        <Button Content="{StaticResource ButtonDuplicate}" Style="{StaticResource StyleDGButton}" Command="{Binding DataContext.CopyFill,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="{StaticResource RVHPCurrentTime}" ElementStyle="{StaticResource StyleDGTextBlockBigLeft}" Width="150"
                                        Binding="{Binding CurrentTime,StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPPV1}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding PV1}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPPV2}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding PV2}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPPV3}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding PV3}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPSV}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding SV}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPTon}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding Ton}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPVaccum}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding Vaccum}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPShift1}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding Shift1}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPShift2}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding Shift2}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPOmega}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding Omega}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPWaterTemperatureIn}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding WaterTemperatureIn}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPWaterTemperatureOut}" ElementStyle="{StaticResource StyleDGTextBlockBigRight}"
                                        Binding="{Binding WaterTemperatureOut}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPExtraInformation}" ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"
                                        Binding="{Binding ExtraInformation}"/>
                        <DataGridTextColumn Header="{StaticResource RVHPCreator}" ElementStyle="{StaticResource StyleDGTextBlockBigLeft}"
                                        Binding="{Binding Creator}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
