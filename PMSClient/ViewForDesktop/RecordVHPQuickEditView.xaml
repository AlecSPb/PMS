<UserControl x:Class="PMSClient.ViewForDesktop.RecordVHPQuickEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:PMSClient.ViewForDesktop"
            xmlns:control="clr-namespace:WPFControls;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1300"
             DataContext="{Binding Source={StaticResource Locator},Path=RecordVHPQuickEdit}">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resource/Styles/Desktop.xaml"/>
    </UserControl.Resources>
    <Grid Background="{StaticResource BackgroundWindow}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{StaticResource PageRecordVHPQuickEditPage}" Style="{StaticResource TextBlockPageTitleBasic}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="{StaticResource BackgroundNavigateBar}">
            <Button Content="{StaticResource ButtonGiveUp}" Style="{StaticResource ButtonBasic}" Command="{Binding GiveUp}"/>
            <Button Content="{StaticResource ButtonRefresh}" Style="{StaticResource ButtonBasic}" Command="{Binding Refresh}"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{StaticResource IndicatorColorMeaning}" Style="{StaticResource TextBlockBasic}"/>
                <TextBlock Text="{StaticResource IndicatorYesterday}" Background="{StaticResource YesterdayBrush}" Style="{StaticResource TextBlockBasic}"/>
                <TextBlock Text="{StaticResource IndicatorToday}" Background="{StaticResource TodayBrush}" Style="{StaticResource TextBlockBasic}"/>
                <TextBlock Text="{StaticResource IndicatorTomorrow}" Background="{StaticResource TomorrowBrush}" Style="{StaticResource TextBlockBasic}"/>
            </StackPanel>
        </StackPanel>
        <DataGrid x:Name="dg" Grid.Row="2"
                LoadingRow="DataGrid_LoadingRow"
                Style="{StaticResource DataGridBasic}" ItemsSource="{Binding MissonWithPlans}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding DataContext.SelectionChanged,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"
                                           CommandParameter="{Binding ElementName=dg,Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="{StaticResource PlanPlanDate}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding PlanDate,StringFormat={}{0:yyyy-MM-dd}}"/>
                <DataGridTextColumn Header="{StaticResource PlanVHPDeviceCode}" ElementStyle="{StaticResource TextBlockDGCenter}"
                                        Binding="{Binding VHPDeviceCode}"/>
                <DataGridTextColumn Header="{StaticResource OrderStandardComposition}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding CompositionStandard}"/>
                <DataGridTextColumn Header="{StaticResource PlanMoldType}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding MoldType}"/>
                <DataGridTextColumn Header="{StaticResource PlanMoldDiameter}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding MoldDiameter}"/>
                <DataGridTextColumn Header="{StaticResource PlanPreTemperature}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding PreTemperature}"/>
                <DataGridTextColumn Header="{StaticResource PlanPrePressure}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding PrePressure}"/>
                <DataGridTextColumn Header="{StaticResource PlanTemperature}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Temperature}"/>
                <DataGridTextColumn Header="{StaticResource PlanPressure}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Pressure}"/>
                <DataGridTextColumn Header="{StaticResource PlanVaccum}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Vaccum}"/>
                <DataGridTextColumn Header="{StaticResource PlanKeepTempTime}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding KeepTempTime}"/>
                <DataGridTextColumn Header="{StaticResource PlanRemark}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Remark}"/>
                <DataGridTextColumn Header="{StaticResource PlanCreateTime}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding CreateTime}"/>
                <DataGridTextColumn Header="{StaticResource PlanCreator}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Creator}"/>
            </DataGrid.Columns>
        </DataGrid>
        <control:SimplePager Grid.Row="3" Command="{Binding PageChanged}" PageIndex="{Binding PageIndex,Mode=TwoWay}" PageSize="{Binding PageSize}"
                             RecordCount="{Binding RecordCount}" LabelPageIndex="Current Page" LabelPageCount="Total Page"
                             LabelPageSize="Records/Page" LabelRecordCount="Total Record"/>
        <Grid Grid.Row="4" Margin="5" DataContext="{Binding CurrentRecordVHP,Mode=TwoWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition   Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="12" Margin="5" Content="{StaticResource ButtonNewMode}" 
                   Command="{Binding DataContext.New,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"/>
            <Button Content="{StaticResource ButtonSave}" Grid.Row="1" Grid.Column="12" Grid.RowSpan="3" Margin="5"
                    FontSize="20"
                    Command="{Binding DataContext.Save,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"/>
            <TextBlock Text="PV1:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="0"/>
            <TextBox Text="{Binding PV1}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="1" />
            <TextBlock Text="PV2:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="2"/>
            <TextBox Text="{Binding PV2}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="3"/>
            <TextBlock Text="PV3:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="4"/>
            <TextBox Text="{Binding PV3}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="5"/>
            <TextBlock Text="SV:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="6"/>
            <TextBox Text="{Binding SV}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="7"/>
            <TextBlock Text="Ton:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="8"/>
            <TextBox Text="{Binding Ton}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="9"/>
            <TextBlock Text="Vaccum:" Style="{StaticResource TextBlockBasic}" Grid.Row="0" Grid.Column="10"/>
            <TextBox Text="{Binding Vaccum}" Style="{StaticResource TextBoxBasic}" Grid.Row="0" Grid.Column="11"/>

            <TextBlock Text="Shift1:" Style="{StaticResource TextBlockBasic}"  Grid.Row="1" Grid.Column="0"/>
            <TextBox Text="{Binding Shift1}" Style="{StaticResource TextBoxBasic}" Grid.Row="1" Grid.Column="1"/>
            <TextBlock Text="Shift2:" Style="{StaticResource TextBlockBasic}" Grid.Row="1" Grid.Column="2"/>
            <TextBox Text="{Binding Shift2}" Style="{StaticResource TextBoxBasic}" Grid.Row="1" Grid.Column="3"/>
            <TextBlock Text="Omega:" Style="{StaticResource TextBlockBasic}" Grid.Row="1" Grid.Column="4"/>
            <TextBox Text="{Binding Omega}" Style="{StaticResource TextBoxBasic}" Grid.Row="1" Grid.Column="5"/>
            <TextBlock Text="WaterIn:" Style="{StaticResource TextBlockBasic}" Grid.Row="1" Grid.Column="6"/>
            <TextBox Text="{Binding WaterTemperatureIn}" Style="{StaticResource TextBoxBasic}" Grid.Row="1" Grid.Column="7"/>
            <TextBlock Text="WaterOut:" Style="{StaticResource TextBlockBasic}" Grid.Row="1" Grid.Column="8"/>
            <TextBox Text="{Binding WaterTemperatureOut}" Style="{StaticResource TextBoxBasic}" Grid.Row="1" Grid.Column="9"/>

            <TextBlock Text="Extral:" Style="{StaticResource TextBlockBasic}"  Grid.Row="2" Grid.Column="0"/>
            <TextBox Text="{Binding ExtraInformation}" Style="{StaticResource TextBoxBasic}" HorizontalAlignment="Stretch"
                             Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="11"/>
        </Grid>
        <DataGrid Name="dgitem" Grid.Row="5" Style="{StaticResource DataGridBasic}"
                  ItemsSource="{Binding RecordVHPs}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{StaticResource DGOperate}" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="{StaticResource ButtonEdit}" Style="{StaticResource ButtonDGBasic}" Command="{Binding DataContext.EditItem,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="{StaticResource ButtonDuplicate}" Style="{StaticResource ButtonDGBasic}" Command="{Binding DataContext.CopyFill,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{StaticResource RVHPCurrentTime}" ElementStyle="{StaticResource TextBlockDGBasic}" Width="150"
                                        Binding="{Binding CurrentTime,StringFormat={}{0:yyyy-MM-dd hh:mm:ss}}"/>
                <DataGridTextColumn Header="{StaticResource RVHPPV1}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding PV1}"/>
                <DataGridTextColumn Header="{StaticResource RVHPPV2}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding PV2}"/>
                <DataGridTextColumn Header="{StaticResource RVHPPV3}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding PV3}"/>
                <DataGridTextColumn Header="{StaticResource RVHPSV}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding SV}"/>
                <DataGridTextColumn Header="{StaticResource RVHPTon}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding Ton}"/>
                <DataGridTextColumn Header="{StaticResource RVHPVaccum}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding Vaccum}"/>
                <DataGridTextColumn Header="{StaticResource RVHPShift1}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding Shift1}"/>
                <DataGridTextColumn Header="{StaticResource RVHPShift2}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding Shift2}"/>
                <DataGridTextColumn Header="{StaticResource RVHPOmega}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding Omega}"/>
                <DataGridTextColumn Header="{StaticResource RVHPWaterTemperatureIn}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding WaterTemperatureIn}"/>
                <DataGridTextColumn Header="{StaticResource RVHPWaterTemperatureOut}" ElementStyle="{StaticResource TextBlockDGRight}"
                                        Binding="{Binding WaterTemperatureOut}"/>
                <DataGridTextColumn Header="{StaticResource RVHPExtraInformation}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding ExtraInformation}"/>
                <DataGridTextColumn Header="{StaticResource RVHPCreator}" ElementStyle="{StaticResource TextBlockDGBasic}"
                                        Binding="{Binding Creator}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
