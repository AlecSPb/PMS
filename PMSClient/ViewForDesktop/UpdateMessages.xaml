<Window x:Class="PMSClient.ViewForDesktop.UpdateMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ViewForDesktop"
        mc:Ignorable="d"
        Title="更新说明" Height="300" Width="300" WindowStyle="ToolWindow" >
    <Window.Resources>
        <ResourceDictionary Source="../Resource/Styles/Desktop.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="更新说明" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="txtUpdatesMessage" Grid.Row="1" IsReadOnly="True" Margin="5" AcceptsReturn="True"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="知道了" Style="{StaticResource StyleButtonCommon}"/>
        </StackPanel>
    </Grid>
</Window>
