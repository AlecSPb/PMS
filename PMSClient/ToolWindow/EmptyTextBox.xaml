<Window x:Class="PMSClient.ToolWindow.EmptyTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ToolWindow"
        mc:Ignorable="d"
        Title="临时存放文本工具-自动保存" Height="450" Width="500">
    <Grid>
        <TextBox Margin="2" Name="txtText" TextChanged="txtText_TextChanged"
                 TextWrapping="WrapWithOverflow" AcceptsReturn="True"/>
    </Grid>
</Window>
