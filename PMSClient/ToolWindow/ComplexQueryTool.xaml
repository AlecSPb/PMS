<Window x:Class="PMSClient.ToolWindow.ComplexQueryTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ToolWindow"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Title="综合查询工具" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="输入PMI Number" Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBox Name="TxtPMINumber" Text="" Style="{StaticResource StyleTextBoxCommon}"/>
        <Button Name="BtnOrder" Click="BtnOrder_Click" Content="订单" Style="{StaticResource StyleButtonCommon}"/>
        <Button Name="BtnMaterialOrderItem" Click="BtnMaterialOrderItem_Click" Content="原料订单"
                Style="{StaticResource StyleButtonCommon}"/>
    </StackPanel>
</Window>
