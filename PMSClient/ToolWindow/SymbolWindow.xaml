<Window x:Class="PMSClient.ToolWindow.SymbolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ToolWindow"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="特殊符号" Height="450" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="5" Rows="5" Button.Click="UniformGrid_Click">
            <Button Content="ρ"/>
            <Button Content="μ"/>
            <Button Content="Ω"/>
            <Button Content="α"/>
            <Button Content="β"/>
            <Button Content="γ"/>
            <Button Content="δ"/>
            <Button Content="ε"/>
            <Button Content="ζ"/>
            <Button Content="η"/>
            <Button Content="θ"/>
            <Button Content="σ"/>
            <Button Content="φ"/>
            <Button Content="Φ"/>
            <Button Content="□"/>
            <Button Content="℃"/>
            <Button Content="Ω"/>
            <Button Content="℉"/>
            <Button Content="×"/>
            <Button Content="÷"/>

        </UniformGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" FontSize="30" Margin="2" Padding="5"
                 TextAlignment="Center"
                 Background="Wheat"
                 Name="TxtSymbol" Text="先选择，再粘贴"/>
            <Button Grid.Column="1" Content="Copy" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
