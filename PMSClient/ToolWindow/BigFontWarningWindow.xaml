<Window x:Class="PMSClient.ToolWindow.BigFontWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ToolWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        Title="提醒窗口" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="基本信息" Name="TxtBasic" TextWrapping="WrapWithOverflow"
                 AcceptsReturn="True"
                 FontSize="20" Foreground="Blue"/>
        <TextBox Grid.Row="1" Text="提醒信息" Name="TxtWarning" TextWrapping="WrapWithOverflow"
                 AcceptsReturn="True"
                 FontSize="30" Foreground="Blue"/>
        <Button Name="BtnOK" Grid.Row="2" Content="知道了" Margin="5" Padding="0 20"
                FontSize="30"
                Click="BtnOK_Click"/>
    </Grid>
</Window>
