<Window x:Class="PMSClient.Tool.DocumentTypeSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.Tool"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize"
        Title="批量导出文档类型选择" Height="300" Width="300">
    <Grid Background="{StaticResource BGBrushWindow}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="请选择你准备导出的文档类型" Style="{StaticResource StyleDGTextBlockCommon}"/>
        <StackPanel Grid.Row="1">
            <Button Name="btnTest" Content="{StaticResource ButtonDocTest}" Style="{StaticResource  StyleButtonCommon}" HorizontalAlignment="Stretch"
                                 Click="btnTest_Click"/>
            <Button Name="btnCOA" Content="{StaticResource ButtonDocCoA}" Style="{StaticResource  StyleButtonCommon}"  HorizontalAlignment="Stretch"
                                Click="btnCOA_Click"/>
            <Button Name="btnCOABL" Content="{StaticResource ButtonDocCoABridgeLine}" Style="{StaticResource  StyleButtonCommon}"  HorizontalAlignment="Stretch"
                               Click="btnCOABL_Click"/>
        </StackPanel>
    </Grid>
</Window>
