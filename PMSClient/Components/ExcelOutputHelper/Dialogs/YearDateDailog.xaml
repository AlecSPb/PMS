<Window x:Class="PMSClient.Components.ExcelOutputHelper.Dialogs.YearDateDailog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.Components.ExcelOutputHelper.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="发货年月-每次导出一月的数据" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="选择年月，然后确定" Style="{StaticResource StyleTextBlockCommon}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="年" Style="{StaticResource StyleTextBlockCommon}"/>
            <ComboBox Name="CboYear" Style="{StaticResource StyleComboBoxCommon}"/>
            <TextBlock Text="月" Style="{StaticResource StyleTextBlockCommon}"/>
            <ComboBox Name="CboMonth" Style="{StaticResource StyleComboBoxCommon}"/>
            <Button Name="BtnFill" Content="确定" Style="{StaticResource StyleButtonCommon}" Click="BtnFill_Click"/>
        </StackPanel>
    </Grid>
</Window>
