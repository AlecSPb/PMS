<Window x:Class="PMSClient.Components.CscanImageProcess.FTPImageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.Components.CscanImageProcess"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="超声图片显示窗口-点击地址可以打开缓存文件夹" Height="600" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="MainInfo" Grid.Row="0"
                Content="提示信息" Background="LightYellow" HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left" Margin="2" Padding="2" Click="MainInfo_Click"/>
        <Border Grid.Row="1" Background="Black" Margin="2">
            <Image Name="MainImage" Margin="10"/>
        </Border>
    </Grid>
</Window>
