<Window x:Class="PMSClient.Components.CscanImageProcess.FTPImageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.Components.CscanImageProcess"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="超声图片显示窗口" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="MainInfo" Grid.Row="0" Style="{StaticResource StyleTextBlockCommon}"
                   Text="提示信息" Background="LightYellow" HorizontalAlignment="Stretch"/>
        <Border Grid.Row="1" Background="Black" Margin="2">
            <Image Name="MainImage" Margin="10"/>
        </Border>
    </Grid>
</Window>
