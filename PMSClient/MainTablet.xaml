<Window x:Class="PMSClient.MainTablet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient"
        mc:Ignorable="d"
        Title="{StaticResource strAppNameTablet}" Loaded="Window_Loaded"
        MinHeight="400" MinWidth="600" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary Source="Resource/Styles/Desktop.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="mainArea" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="{StaticResource BackgroundStatusBar}">
            <TextBlock Name="txtStateMessage" Text="状态栏" Style="{StaticResource TextBlockBasic}"/>
        </StackPanel>
    </Grid>
</Window>
