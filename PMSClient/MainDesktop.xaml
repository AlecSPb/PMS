<Window x:Class="PMSClient.MainDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient"
        mc:Ignorable="d"
        Title="{StaticResource strAppNameDesktop}" WindowStyle="None"
        MinHeight="400" MinWidth="600" WindowState="Maximized" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="Resource/Styles/Desktop.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="titleBar" Grid.Row="0" Background="{StaticResource BackgroundTitleBar}" MouseLeftButtonDown="titleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Image Height="15" Width="15" Source="Resource\Images\main.png" Margin="5 0 0 0"/>
                <TextBlock  Text="{StaticResource strAppNameDesktop}" Style="{StaticResource AppTitleTextBlock}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtCurrentUserName" Text="" Style="{StaticResource AppTitleTextBlock}" Foreground="Yellow" Margin="0 0 5 0"/>
                <Button Name="btnMiinimum" Content="-" Style="{StaticResource ControlButton}" Click="btnMiinimum_Click"/>
                <Button Name="btnMaximum" Content="+" Style="{StaticResource ControlButton}" Click="btnMaximum_Click"/>
                <Button Name="btnClose" Content="X" Style="{StaticResource ControlButton}" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>

        <Menu Grid.Row="1" VerticalAlignment="Center">
            <MenuItem Header="{StaticResource strPageStart}">
                <MenuItem Header="登录"/>
                <MenuItem Header="{StaticResource strPageNaivgation}"/>
                <Separator/>
                <MenuItem Header="{StaticResource strPageBasicData}">
                    <MenuItem Header="Compound"/>
                    <MenuItem Header="Element"/>
                    <MenuItem Header="Mold"/>
                    <MenuItem Header="VHP Device"/>
                    <MenuItem Header="VHP Process"/>
                    <MenuItem Header="Supplier Information"/>
                    <MenuItem Header="Customer Information"/>
                    <MenuItem Header="Delivery Address Collection"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{StaticResource strPageAdmin}">
                    <MenuItem Header="User Access Control"/>
                    <MenuItem Header="Log Information"/>
                    <MenuItem Header="Debug Mode"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{StaticResource strPageSetting}"/>
                <Separator/>
                <!--<MenuItem Header="Log Out"/>-->
                <MenuItem x:Name="MenuExit" Header="{StaticResource strPageExit}"/>
            </MenuItem>
            <MenuItem Header="{StaticResource strPageAbout}">
                <MenuItem Header="{StaticResource strPageInstruct}"/>
                <MenuItem Header="{StaticResource strPageHelp}"/>
                <MenuItem Header="{StaticResource strPageWebSite}"/>
                <MenuItem Header="{StaticResource strPageAbout}"/>
            </MenuItem>
        </Menu>
        <Border Grid.Row="2">
            <ContentControl x:Name="mainArea"/>
        </Border>
        <Grid Grid.Row="3"  Background="{StaticResource BackgroundStatusBar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="txtStateMessage" Text="状态栏" Style="{StaticResource TextBlockBasic}" Foreground="White"/>
            <TextBlock Grid.Column="1" Text="designed by xs.zhou" Style="{StaticResource TextBlockBasic}" Foreground="White" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
