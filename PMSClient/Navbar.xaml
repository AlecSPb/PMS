<UserControl x:Class="PMSClient.Navbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMSClient"
             mc:Ignorable="d" d:DesignWidth="800">
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                <GradientStop Color="LightGreen" Offset="0.3"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel  Orientation="Horizontal">
            <TextBlock Text="{StaticResource BottomBarTool}" Style="{StaticResource StyleDGTextBlockCommon}"/>
            <Button Content="{StaticResource BottomBarFillCalculator}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding MaterialNeedCalculator}"/>
            <Button Content="{StaticResource BottomBarPressure}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding PressureTool}"/>
            <Button Content="{StaticResource BottomBarFillingTool}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding FillingTool}"/>
            <Button Content="{StaticResource BottomBarToOne}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding ToOne}"/>
            <Button Content="{StaticResource BottomBarQuery}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding IntergratedSearch}"/>

            <TextBlock Text="{StaticResource BottomBarRule}" Style="{StaticResource StyleDGTextBlockCommon}"/>
            <Button Content="{StaticResource BottomBarCodeRule}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding CodeRule}"/>
            <Button Content="{StaticResource BottomBarLaserRule}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding LaserRule}"/>
            <Button Content="{StaticResource BottomBarFillingToolRule}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding FillingToolRule}"/>
            
            <TextBlock Text="{StaticResource BottomBarInformation}" Style="{StaticResource StyleDGTextBlockCommon}"/>
            <Button Content="{StaticResource BottomBarHelp}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding HelpInfo}"/>
            <Button Content="{StaticResource BottomBarUpdate}" Style="{StaticResource StyleButtonCommonNarrow}"
                Command="{Binding UpdateInfo}"/>

        </StackPanel>
    </Border>
</UserControl>
