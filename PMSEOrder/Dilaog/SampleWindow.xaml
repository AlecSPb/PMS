<Window x:Class="PMSEOrder.SampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSEOrder"
        mc:Ignorable="d"
        Title="SampleWindow" Height="350" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource StyleTextBlockCommon}" Text="Please select a sample item"/>
        <StackPanel Grid.Row="1" ButtonBase.Click="StackPanel_Click">
            <Button Content="15g powder" Style="{StaticResource StyleButtonStrench}"/>
            <Button Content="15g W1"  Style="{StaticResource StyleButtonStrench}"/>
            <Button Content="15g W2"  Style="{StaticResource StyleButtonStrench}"/>
            <Button Content="15g W2 80mm OD"  Style="{StaticResource StyleButtonStrench}"/>
        </StackPanel>
    </Grid>
</Window>
