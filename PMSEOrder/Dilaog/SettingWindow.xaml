<Window x:Class="PMSEOrder.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSEOrder"
        mc:Ignorable="d"
        Title="Setting" Height="150" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Current User" Style="{StaticResource StyleTextBlockCommon}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource StyleTextBoxCommon}" Name="TxtCreator"/>
        
        <Button Name="BtnSave" Content="Save" Style="{StaticResource StyleButtonStrench}" Click="BtnSave_Click"
                Grid.ColumnSpan="2" Grid.Row="1" Height="40"/>

    </Grid>
</Window>
