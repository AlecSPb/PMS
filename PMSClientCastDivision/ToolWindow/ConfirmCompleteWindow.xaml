<Window x:Class="PMSClient.ToolWindow.ConfirmCompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSClient.ToolWindow"
        mc:Ignorable="d"
        Title="确定完成该项目吗？" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="材料编号"  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text=""  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="材料成分" Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text=""  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="目标重量"  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text=""  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="实际提交重量"  Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="" Style="{StaticResource StyleTextBoxLeft}"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="熔点信息" Style="{StaticResource StyleDGTextBlockCommon}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="" Style="{StaticResource StyleTextBoxCommon}"/>
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource StyleButtonCommon}" Content="部分交付"/>
            <Button Style="{StaticResource StyleButtonCommon}" Content="全部交付"/>
        </StackPanel>
    </Grid>
</Window>
