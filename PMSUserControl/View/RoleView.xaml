<UserControl x:Class="PMSUserControl.View.RoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMSUserControl.View"
             xmlns:control="clr-namespace:WPFControls;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="{StaticResource CommonBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="{StaticResource ToolBarBackground}">
            <Button Content="Add" Style="{StaticResource ButtonBasic}"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Style="{StaticResource DataGridBasic}">
            
        </DataGrid>
        <control:SimplePager Grid.Row="2"/>
        <DataGrid Grid.Row="3" Style="{StaticResource DataGridBasic}"/>
    </Grid>
</UserControl>
