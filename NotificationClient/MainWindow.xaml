<Window x:Class="NotificationClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotificationClient"
        mc:Ignorable="d"
        Name="window"
        Title="MainWindow" Height="100" MaxHeight="100" Width="525" WindowStartupLocation="Manual" Top="0" Left="0"
        WindowState="Maximized"
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None" Topmost="True">
    <Window.Resources>
        <local:MarginConverterFrom x:Key="ConverterMarginFrom"/>
        <local:MarginConverterTo x:Key="ConverterMarginTo"/>
        <Storyboard x:Key="InformationScrollAnimation">
            <ThicknessAnimation Storyboard.TargetName="txtInformation" Storyboard.TargetProperty="Margin"
                                From="{Binding ElementName=window,Path=ActualWidth,Converter={StaticResource ConverterMarginFrom}}"
                                To="{Binding ElementName=txtInformation,Path=ActualWidth,Converter={StaticResource ConverterMarginTo}}"
                                Duration="0:0:20" AutoReverse="False" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger SourceName="window" RoutedEvent="Window.Loaded">
            <BeginStoryboard Name="startAnimation" Storyboard="{StaticResource InformationScrollAnimation}">
                
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <TextBlock x:Name="txtInformation" Foreground="Orange"
                   Text="滚动信息测试滚动信息测试滚动信息测试滚动信息测试滚动信息测试滚动信息测试滚动信息测试"
                   FontSize="30" VerticalAlignment="Center" Margin="0 0 0 0" HorizontalAlignment="Left"/>
    </Grid>
</Window>
