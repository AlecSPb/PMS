<Window x:Class="CameraAndQRCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraAndQRCode"
        xmlns:WpfMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <StackPanel>
        <ComboBox Name="cbo" SelectionChanged="cbo_SelectionChanged"/>
        <WpfMediaKit:VideoCaptureElement Height="200" Name="vce"/>
        <Button Name="btnCapture" Height="50" Content="拍照" Click="btnCapture_Click"/>
        <Button Name="btnNew" Height="50" Content="重拍" Click="btnNew_Click"/>
    </StackPanel>
</Window>
