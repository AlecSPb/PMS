<Window x:Class="TargetCutterSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TargetCutterSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="圆" Style="{StaticResource btn}"/>
            <Button Content="方" Style="{StaticResource btn}"/>

        </StackPanel>
        <Canvas Name="MainCanvas" Margin="0,0,-0.4,0.4" Grid.RowSpan="2">
            <Ellipse Name="Shape1" Height="200" Width="200" Stroke="Blue" StrokeThickness="1" Canvas.Left="125" Canvas.Top="85"
                     MouseDown="Shape1_MouseDown"
                     MouseMove="Shape1_MouseMove"
                     MouseLeave="Shape1_MouseLeave"
                     Fill="White">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="sfr"/>
                        <TranslateTransform x:Name="tlt"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            
        </Canvas>
    </Grid>
</Window>
